<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	
	<persistence-unit name="freeboard">
		<class>com.project.freeboard.entity.Students</class>
		<class>com.project.freeboard.entity.Companies</class>
		<class>com.project.freeboard.entity.Auctions</class>
		<class>com.project.freeboard.entity.Offers</class>
		<class>com.project.freeboard.entity.Transactions</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>

			<property name="datanucleus.identyfier.case" value="MixedCase" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />

		</properties>
	</persistence-unit>

</persistence>